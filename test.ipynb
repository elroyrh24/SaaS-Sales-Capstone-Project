    "digits = input(\"Enter the four digit number: \")\n",
    "total = 0\n",
    "reverse =''\n",
    "for number in digits:\n",
    "    total = total + int(number)\n",
    "for number_flip in reversed(digits):\n",
    "    reverse = reverse + number_flip\n",
    "reverse = (reverse)\n",
    "print (\"total: \" + str(total))\n",
    "print(\"reverse: \" + reverse)"
   ]
